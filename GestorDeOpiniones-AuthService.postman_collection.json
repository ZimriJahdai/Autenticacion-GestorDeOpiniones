							"path": [
								"users",
								":userId",
								"role"
							],
							"variable": [
								{
									"key": "userId",
									"value": "user-id-here",
									"description": "ID del usuario a actualizar"
								}
							]
						},
						"description": "Actualiza el rol de un usuario. Solo disponible para administradores. Valores: ADMIN_ROLE o USER_ROLE"
					},
					"response": []
