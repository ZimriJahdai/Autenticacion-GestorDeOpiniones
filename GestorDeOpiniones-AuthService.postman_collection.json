								},
								{
									"key": "surname",
									"value": "Pérez",
									"type": "text",
									"description": "Apellido del usuario"
								},
								{
									"key": "username",
									"value": "juanperez",
									"type": "text",
									"description": "Nombre de usuario único"
								},
								{
									"key": "email",
									"value": "juan.perez@example.com",
									"type": "text",
									"description": "Email del usuario"
								},
								{
									"key": "password",
									"value": "Password123!",
									"type": "text",
									"description": "Contraseña (mínimo 8 caracteres)"
								},
								{
									"key": "phone",
									"value": "12345678",
									"type": "text",
									"description": "Teléfono (8 dígitos)"
								},
								{
									"key": "profilePicture",
									"type": "file",
									"description": "Imagen de perfil (opcional)",
									"disabled": true
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"register"
							]
						},
						"description": "Registra un nuevo usuario en el sistema. Soporta carga de imagen de perfil opcional."
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.token) {",
									"        pm.environment.set(\"auth_token\", jsonData.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"emailOrUsername\": \"juan.perez@example.com\",\n    \"password\": \"Password123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"login"
							]
						},
						"description": "Autentica un usuario con email/username y contraseña. Retorna un JWT token que se guarda automáticamente."
					},
					"response": []
				},
				{
					"name": "Verify Email",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"token\": \"your-verification-token-here\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/verify-email",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"verify-email"
							]
						},
						"description": "Verifica el email del usuario usando el token enviado por correo."
					},
					"response": []
				},
				{
					"name": "Resend Verification Email",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"juan.perez@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/resend-verification",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"resend-verification"
							]
						},
						"description": "Reenvía el email de verificación al usuario."
					},
					"response": []
				},
